<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".Driverreg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dsignuptitle"
        android:text="Driver Sign Up"
        android:textSize="35dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="35dp"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dusername"
        android:background="#30ffffff"
        android:layout_below="@id/dsignuptitle"
        android:hint="Driver Name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"

        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/demail"
        android:background="#30ffffff"
        android:layout_below="@id/dusername"
        android:hint="Email Id"
        android:textColorHint="@color/white"
        android:textColor="@color/white"

        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_mail_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dpassword"
        android:background="#30ffffff"
        android:layout_below="@id/demail"
        android:hint="Pass Word"
        android:textColorHint="@color/white"
        android:textColor="@color/white"

        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="20dp"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drepassword"
        android:background="#30ffffff"
        android:layout_below="@id/dpassword"
        android:hint="Re-Enter"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="20dp"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/drepassword"
        android:layout_marginLeft="150dp"
        android:id="@+id/dsigup"
        android:text="SignUp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/dsigup"
        android:layout_marginLeft="140dp"
        android:id="@+id/logint"
        android:text="click to login"/>

</RelativeLayout>